@model IEnumerable<ShirlyStudio.Models.Category>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout-page.cshtml";
}

<h2>רשימת קטגוריות</h2>

<p>
    <a asp-action="Create">יצירת קטגוריה חדשה</a>
</p>
<table class="table table-striped table-bordered table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CategoryName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.CategoryName)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.CategoryId">עריכה</a> |
                    <a asp-action="Details" asp-route-id="@item.CategoryId">פרטים</a> |
                    <a asp-action="Delete" asp-route-id="@item.CategoryId">מחיקה</a>
                </td>
            </tr>
        }
    </tbody>
</table>
