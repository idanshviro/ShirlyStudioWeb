@model ShirlyStudio.Models.CustomerRegistration

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout-page.cshtml";
}

<h2>פרטי הסדנה</h2>

<div>
   
    <hr />
    <dl class="dl-horizontal">
        <dl>
            <di>
                <dt>שם הסדנה</dt>
                <dd>@ViewBag.WorkshopName</dd>
            </di>
            <di>
                <dt>שם הלקוח</dt>
                <dd> @ViewBag.CustomerName</dd>
            </di>
            <di>
                <dt>קטגוריה</dt>
                <dd> @ViewBag.Category</dd>
            </di>
            <di>
                <dt>שם המורה</dt>
                <dd> @ViewBag.Teacher</dd>
            </di>
            <di>
                <dt>תאריך ושעה</dt>
                <dd> @ViewBag.Time</dd>
            </di>
            <di>
                <dt>מחיר</dt>
                <dd> @ViewBag.Price</dd>
            </di>
        </dl>
    </dl>
</div>
<div>
    <a asp-action="MyIndex">חזרה לרישומי הסדנאות שלי</a>
</div>
