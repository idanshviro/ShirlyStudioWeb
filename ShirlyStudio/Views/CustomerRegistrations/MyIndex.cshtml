@model IEnumerable<ShirlyStudio.Models.CustomerRegistration>

@{
    ViewData["Title"] = "MyIndex";
    Layout = "~/Views/Shared/OnlyHomePageLayout.cshtml";
}

<script src='../js/three.min.js'></script>
<script src='../js/TweenMax.min.js'></script>
<script src='../js/bas.js'></script>
<script src='../js/OrbitControls-2.js'></script>
<script src="../js/index.js"></script>
<link href="~/css/index.css" rel="stylesheet" />

<h2>הרישומים שלי</h2>

<table class="table">
    <thead>
        <tr>
            <th>
                שם הלקוח
            </th>
            <th>
                שם הסדנה
            </th>
            <th>
                קטגוריה
            </th>
            <th>
                שם המורה
            </th>
            <th>
                תאריך ושעה
            </th>
            <th>
                משך הסדנה בשעות
            </th>
            <th>
                מחיר
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Customer.CustomerName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Workshop.WorkshopName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Workshop.Category.CategoryName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Workshop.Teacher.TeacherName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Workshop.FullData)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Workshop.Duration)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Workshop.Price)
                </td>
                <td>
                    <a asp-action="MyDetails" asp-route-id="@item.CustomerRegistrationId">פרטי הרישום לסדנה</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<div id="three-container"></div>
